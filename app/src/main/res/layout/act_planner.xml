<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <include layout="@layout/appbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginTop="@dimen/y100"
        android:layout_marginRight="@dimen/x100"
        >
        <TextView
            android:layout_width="@dimen/x240"
            android:layout_height="match_parent"
            android:text="@string/own_planner_user"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/x30"
            android:gravity="center_vertical"
            />


        <TextView
            android:id="@+id/tv_planner_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/x30"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <View style="@style/hLineStyle"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        >
        <TextView
            android:layout_width="@dimen/x240"
            android:layout_height="match_parent"
            android:text="@string/own_planner_phone"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/x30"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_planner_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/x30"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <View style="@style/hLineStyle"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        >
        <TextView
            android:layout_width="@dimen/x240"
            android:layout_height="match_parent"
            android:text="@string/own_planner_city"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/x30"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/tv_planner_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/x30"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <View style="@style/hLineStyle"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"/>


    <TextView
        android:id="@+id/tv_change_commit"
        style="@style/FilletLoginBtnStyle"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x50"
        android:background="@drawable/fillet_loginbtn_normal"
        android:text="@string/own_planner_contact"
        android:textColor="@color/white" />

</LinearLayout>