<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_grey"
    android:orientation="vertical">

    <include layout="@layout/appbar_layout" />

    <View style="@style/hLineheight20Style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/rl_setting_security"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:text="@string/own_setting_security"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/x30" />

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:background="@mipmap/next" />
        </RelativeLayout>

        <View
            style="@style/hLineStyle"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30" />

        <RelativeLayout
            android:id="@+id/rl_setting_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:text="@string/own_setting_help"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/x30" />

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:background="@mipmap/next" />
        </RelativeLayout>

        <View
            style="@style/hLineStyle"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30" />

        <RelativeLayout
            android:id="@+id/rl_setting_opinion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:text="@string/own_setting_opinion"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/x30" />

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:background="@mipmap/next" />
        </RelativeLayout>

        <View
            style="@style/hLineStyle"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30" />

        <RelativeLayout
            android:id="@+id/rl_setting_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:text="@string/own_setting_version"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/x30" />

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:background="@mipmap/next" />
        </RelativeLayout>

        <View
            style="@style/hLineStyle"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30" />

        <RelativeLayout
            android:id="@+id/rl_setting_contact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x50"
                android:text="@string/own_setting_contact"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/x30" />

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:background="@mipmap/next" />
        </RelativeLayout>

        <View
            style="@style/hLineStyle"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30" />
    </LinearLayout>

    <TextView
        android:id="@+id/login"
        android:layout_width="@dimen/x542"
        android:layout_height="@dimen/y88"
        android:textColor="@color/white"
        android:textSize="@dimen/x32"
        android:text="@string/login_btn_loginout"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/fillet_loginbtn_normal"
        />

</LinearLayout>