<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000">

    <LinearLayout
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/y350"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/y45"
        android:background="@drawable/fillet_btn_normal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_success_img"
            android:layout_width="@dimen/x142"
            android:layout_height="@dimen/x142"
            android:src="@mipmap/success"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/dialog_success_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/x36"
            />

        <TextView
            android:id="@+id/dialog_success_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/x24" />
    </LinearLayout>
</RelativeLayout>