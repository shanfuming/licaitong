<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <TextView
            android:id="@+id/tv_touzi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="票据投资"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/tv_touzi_more"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/y80"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="更多>>"
            android:textColor="@drawable/tab_textselector_more"
            android:textSize="@dimen/x28"

            />

    </RelativeLayout>

    <View style="@style/hLineStyle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x44"
            android:layout_marginRight="@dimen/x90"
            android:layout_marginTop="@dimen/x44"
            android:layout_marginLeft="@dimen/x20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_predictIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.88%"
                android:textColor="@color/app_color_principal"
                android:textSize="@dimen/x48" />

            <TextView
                android:id="@+id/tv_predictIncome_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text="预期年化收益"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/x20" />
        </LinearLayout>

        <View
            style="@style/vLineStyle"
            android:layout_marginBottom="@dimen/x44"
            android:layout_marginTop="@dimen/x44" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/x44"
                android:layout_marginLeft="@dimen/x90"
                android:layout_marginBottom="@dimen/x44"
                >
                <TextView
                    android:id="@+id/tv_tender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盛向泰票据1-001期"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/x30" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/y20"
                    >
                    <TextView
                        android:id="@+id/tv_tender_dayNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="112天"
                        android:textSize="@dimen/x28"
                        android:textColor="@color/dayAndMark"
                        android:layout_marginRight="@dimen/x50"
                        />
                    <View style="@style/vLineStyle"
                        android:layout_marginTop="@dimen/x1"
                        android:layout_marginBottom="@dimen/x1"
                        />

                    <TextView
                        android:id="@+id/tv_condition_startMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5万起投"
                        android:textSize="@dimen/x28"
                        android:textColor="@color/dayAndMark"
                        android:layout_marginLeft="@dimen/x50"
                        />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_tender_state"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/x44"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>